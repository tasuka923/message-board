<%= form_for(message) do |f| %>

<% if message.errors.any? %>
  <div id="error_explanation">
    <u1>
      <% message.errors.full_messages.each do |message| %>
        <li>
          <%= message %>
        </li>
      <% end %>
    </u1>
  </div>
<% end %>


<%= f.label :content, 'メッセージ' %>
<%= f.text_field :content %>
<%= f.submit '投稿' %>

<% end %>